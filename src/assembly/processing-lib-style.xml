<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

	<id>processing-lib</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>Moonlander</baseDirectory>
	
	<fileSets>
		<fileSet>
			<outputDirectory>examples</outputDirectory>
			<directory>${basedir}/examples</directory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>library</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<outputDirectory>reference</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useProjectAttachments>true</useProjectAttachments>
			<unpack>true</unpack>
			<includes>
				<include>moonlander:Moonlander:*:javadoc</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>src</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useProjectAttachments>true</useProjectAttachments>
			<unpack>true</unpack>
			<includes>
				<include>moonlander:Moonlander:*:sources</include>
			</includes>
		</dependencySet>
	</dependencySets>
	
</assembly>